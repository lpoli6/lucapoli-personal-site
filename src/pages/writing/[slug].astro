---
import { render, type CollectionEntry } from "astro:content";

import BaseLayout from "../../layouts/BaseLayout.astro";
import { estimateReadingTimeMinutes, formatDate } from "../../lib/format";
import { getAllWritingEntries, getEntrySlug } from "../../lib/writing";

export async function getStaticPaths() {
  const posts = await getAllWritingEntries();

  return posts.map((post) => ({
    params: { slug: getEntrySlug(post) },
    props: { post }
  }));
}

interface Props {
  post: CollectionEntry<"writing">;
}

const { post } = Astro.props;
const { Content } = await render(post);
const readingTimeMinutes = estimateReadingTimeMinutes(post.body ?? "");
const slug = getEntrySlug(post);
const summary =
  post.data.excerpt ??
  post.data.description ??
  "Notes on enterprise AI deployment, operating at scale, and leadership transitions.";
---

<BaseLayout
  title={post.data.title}
  description={summary}
  ogTitle={post.data.title}
  ogDescription={summary}
  ogType="article"
  path={`/writing/${slug}`}
>
  <article class="writing-article">
    <header>
      <h1 class="font-serif text-[2.5rem] font-semibold leading-tight tracking-tight text-text">{post.data.title}</h1>
      <p class="mt-3 text-sm text-muted">
        {formatDate(post.data.date)} Â· {readingTimeMinutes} min read
      </p>
      {summary ? <p class="mt-5 text-[1.08rem] leading-[1.65] text-[#666666]">{summary}</p> : null}
    </header>

    <div class="prose-content mt-8">
      <Content />
    </div>
  </article>
</BaseLayout>
