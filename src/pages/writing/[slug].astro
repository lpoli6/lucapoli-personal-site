---
import type { CollectionEntry } from "astro:content";

import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllWritingEntries, getEntrySlug } from "../../lib/writing";

export async function getStaticPaths() {
  const posts = await getAllWritingEntries();

  return posts.map((post) => ({
    params: { slug: getEntrySlug(post) },
    props: { post }
  }));
}

interface Props {
  post: CollectionEntry<"writing">;
}

const { post } = Astro.props;
const slug = getEntrySlug(post);
const placeholderDescription = "This essay is coming soon.";
---

<BaseLayout
  title={post.data.title}
  description={placeholderDescription}
  ogTitle={post.data.title}
  ogDescription={placeholderDescription}
  ogType="article"
  path={`/writing/${slug}`}
>
  <article class="writing-article">
    <header>
      <h1 class="font-serif text-[2.5rem] font-semibold leading-tight tracking-tight text-text">{post.data.title}</h1>
      <p class="mt-3 text-sm text-muted">Coming Soon</p>
      <p class="mt-5 text-[1.08rem] leading-[1.65] text-[#666666]">I'm taking my time to get these right. Check back soon.</p>
    </header>
  </article>
</BaseLayout>
