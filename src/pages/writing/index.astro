---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllWritingEntries } from "../../lib/writing";

const posts = await getAllWritingEntries();
---

<BaseLayout
  title="Writing"
  description="Essays on enterprise AI, technology execution, and leadership."
  path="/writing"
>
  <section class="max-w-prose">
    <h1 class="font-serif text-[2.3rem] font-semibold leading-tight tracking-tight">Writing</h1>
    <p class="mt-6 text-[1.08rem] leading-[1.65] text-text">
      Notes on enterprise AI deployment, operating at scale, and leadership transitions.
    </p>

    <div class="mt-12 space-y-11">
      {
        posts.map((post) => {
          return (
            <article class="space-y-2">
              <h2 class="text-[1.4rem] font-semibold leading-snug tracking-tight text-text">{post.data.title}</h2>
              <p class="text-[0.76rem] font-normal tracking-[0.03em] text-[#8a8a8a]">Coming Soon</p>
              <p class="text-[1rem] leading-relaxed text-[#666666]">I'm taking my time to get these right. Check back soon.</p>
            </article>
          );
        })
      }
    </div>
  </section>
</BaseLayout>
