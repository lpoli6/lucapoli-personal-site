---
import Analytics from "@vercel/analytics/astro";
import SiteFooter from "../components/SiteFooter.astro";
import SiteHeader from "../components/SiteHeader.astro";
import { SITE_DESCRIPTION, SITE_NAME, SITE_OG_IMAGE, toAbsoluteUrl } from "../lib/site";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  path?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogType?: "website" | "article";
  ogImage?: string;
}

const {
  title,
  description = SITE_DESCRIPTION,
  path = "/",
  ogTitle,
  ogDescription,
  ogType = "website",
  ogImage = SITE_OG_IMAGE
} = Astro.props;
const pageTitle = title ? `${title} | ${SITE_NAME}` : SITE_NAME;
const normalizedPath = path.startsWith("/") ? path : `/${path}`;
const canonicalUrl = toAbsoluteUrl(normalizedPath);
const ogImageUrl = toAbsoluteUrl(ogImage);
const resolvedOgTitle = ogTitle ?? pageTitle;
const resolvedOgDescription = ogDescription ?? description;
const rssFeedUrl = toAbsoluteUrl("/feed.xml");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="alternate" type="application/rss+xml" title={`${SITE_NAME} Writing`} href={rssFeedUrl} />

    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content={SITE_NAME} />
    <meta property="og:title" content={resolvedOgTitle} />
    <meta property="og:description" content={resolvedOgDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={resolvedOgTitle} />
    <meta name="twitter:description" content={resolvedOgDescription} />
    <meta name="twitter:image" content={ogImageUrl} />
  </head>

  <body>
    <div class="min-h-screen bg-bg text-text">
      <div class="mx-auto flex min-h-screen w-full max-w-content flex-col px-6 py-8 sm:px-10 sm:py-10">
        <SiteHeader currentPath={normalizedPath} />
        <main class="mt-14 flex-1">
          <slot />
        </main>
        <SiteFooter />
      </div>
    </div>
    <Analytics />
  </body>
</html>
