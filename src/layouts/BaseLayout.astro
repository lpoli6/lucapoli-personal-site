---
import SiteFooter from "../components/SiteFooter.astro";
import SiteHeader from "../components/SiteHeader.astro";
import { SITE_DESCRIPTION, SITE_NAME, SITE_OG_IMAGE, toAbsoluteUrl } from "../lib/site";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  path?: string;
}

const { title, description = SITE_DESCRIPTION, path = "/" } = Astro.props;
const pageTitle = title ? `${title} | ${SITE_NAME}` : SITE_NAME;
const normalizedPath = path.startsWith("/") ? path : `/${path}`;
const canonicalUrl = toAbsoluteUrl(normalizedPath);
const ogImageUrl = toAbsoluteUrl(SITE_OG_IMAGE);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SITE_NAME} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
  </head>

  <body>
    <div class="min-h-screen bg-bg text-text">
      <div class="mx-auto flex min-h-screen w-full max-w-content flex-col px-6 py-8 sm:px-10 sm:py-10">
        <SiteHeader />
        <main class="mt-14 flex-1">
          <slot />
        </main>
        <SiteFooter />
      </div>
    </div>
  </body>
</html>
